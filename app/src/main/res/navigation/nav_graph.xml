<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">
    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.myapplication.fragments.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreen_to_appUiActivity2"
            app:destination="@id/appUiActivity2" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.myapplication.fragments.viewPager.entry.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_userInformation"
            app:destination="@id/userInformation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userInformation"
        android:name="com.example.myapplication.fragments.UserInformation"
        android:label="UserInformation"
        tools:layout="@layout/fragment_user_information">
        <action
            android:id="@+id/action_userInformation_to_appUiActivity2"
            app:destination="@id/appUiActivity2" />
    </fragment>
    <activity
        android:id="@+id/appUiActivity2"
        android:name="com.example.myapplication.activities.AppUiActivity"
        android:label="fragment_app_ui"
        tools:layout="@layout/fragment_app_ui" />
</navigation>