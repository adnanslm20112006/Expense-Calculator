<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/account_box"
               motion:framePosition="100"
               android:alpha="1"/>
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/account_ic"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/the_name"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/account_ic"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/account_ic"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="240dp"
            android:layout_height="240dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.10"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/account_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/account_ic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/the_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteY="48dp"
            motion:layout_editor_absoluteX="115dp"
            motion:layout_constraintBottom_toBottomOf="@id/account_ic"
            motion:layout_constraintTop_toTopOf="@id/account_ic"
            motion:layout_constraintStart_toEndOf="@id/account_ic"
            android:layout_marginStart="12dp" />
        <Constraint
            android:id="@+id/account_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/account_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>