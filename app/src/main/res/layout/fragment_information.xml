<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    android:background="@color/yellow_700"
    android:backgroundTint="@color/yellow_700"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_information_scene"
    tools:context=".fragments.Information">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginVertical="24dp"
        android:src="@drawable/app_icon"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center_vertical|start"
        android:textColor="@color/white"
        tools:text="Category"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/app_icon"
        app:layout_constraintStart_toStartOf="@id/app_icon"
        app:layout_constraintTop_toBottomOf="@id/app_icon" />

    <ScrollView
    android:id="@+id/scrolling_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/category_name">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/category_paid_calculations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/total_paid"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_total_per_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/total_percent"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paid_calculations_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            app:layout_constraintTop_toBottomOf="@id/category_paid_calculations">

            <TextView
                android:id="@+id/total_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="@color/blue_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_per_month_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="@color/blue_700"
                android:textStyle="bold" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/payment_indicator_unfocused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateOnly="false"
            android:progress="100"
            android:progressDrawable="@drawable/indicator_unfocused"
            app:layout_constrainedHeight="true"
            android:minHeight="360dp"
            android:maxHeight="750dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paid_calculations_number" />
        <ProgressBar
            android:id="@+id/payment_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateOnly="false"
            tools:progress="100"
            android:progressDrawable="@drawable/indicator"
            android:progressTint="@color/blue_700"
            app:layout_constrainedHeight="true"
            android:minHeight="360dp"
            android:maxHeight="750dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paid_calculations_number" />

        <TextView
            android:id="@+id/indicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            tools:text="100%"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/blue_700"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/payment_indicator"
            app:layout_constraintEnd_toEndOf="@id/payment_indicator"
            app:layout_constraintStart_toStartOf="@id/payment_indicator"
            app:layout_constraintTop_toTopOf="@id/payment_indicator" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>