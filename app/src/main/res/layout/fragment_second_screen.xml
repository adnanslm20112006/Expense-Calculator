<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_700"
    tools:context=".fragments.viewPager.entry.SecondScreen">

    <ImageView
        android:id="@+id/second_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/app_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crafty_girls"
        android:gravity="center"
        android:paddingHorizontal="48dp"
        android:paddingVertical="12dp"
        android:text="@string/now_you_can_customize_your_data_using_categories_charts_and_a_lot_of_tools_will_be_available_for_you"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/second_image" />
</androidx.constraintlayout.widget.ConstraintLayout>